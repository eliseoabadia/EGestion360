@using System.ComponentModel.DataAnnotations
@using EG.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

@inject IJSRuntime _jsRuntime
@inject ProfileService profileService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true">¿Estás seguro?</MudText>
        <MudText Typo="Typo.body2">
            Estás a punto de eliminar este registro. Esta acción no se puede deshacer. ¿Deseas continuar?
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancelar" Color="Color.Primary" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton OnClick="EliminarUsuario" Color="Color.Error" Variant="Variant.Filled">Eliminar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public int UsuarioId { get; set; }

    private bool loading = false;

    [Inject] private ISnackbar Snackbar { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    private async Task EliminarUsuario()
    {
        bool result;
        string msg;
        loading = true;

        try
        {
            (result, msg) = await profileService.DeleteProfileUserById(UsuarioId);

            Snackbar.Add(msg, result ? Severity.Success : Severity.Error);

            MudDialog.Close(DialogResult.Ok(result));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al eliminar el usuario: {ex.Message}", Severity.Error);
        }
    }

    private void Cancelar()
    {
        MudDialog.Close(DialogResult.Cancel());
    }
}
