@using System.ComponentModel.DataAnnotations
@using EG.Web.Contracs.Configuration
@using EG.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

@inject IJSRuntime _jsRuntime
@inject IUsuarioService usuarioService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true">¿Estás seguro?</MudText>
        <MudText Typo="Typo.body2">
            Estás a punto de eliminar este registro. Esta acción no se puede deshacer. ¿Deseas continuar?
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancelar" Color="Color.Primary" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton OnClick="OnEliminarUsuario" Color="Color.Error" Variant="Variant.Filled">Eliminar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public int UsuarioId { get; set; }

    private bool loading = false;

    [Inject] private ISnackbar Snackbar { get; set; } = null!;
    [Inject] private NavigationManager NavigationManager { get; set; } = null!;
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    private async Task OnEliminarUsuario()
    {
        loading = true;
        StateHasChanged();

        try
        {
            var response = await usuarioService.DeleteUsuarioAsync(UsuarioId);

            if (response != null && response.Success)
            {
                var message = !string.IsNullOrEmpty(response.Message)
                    ? response.Message
                    : $"✅ Usuario eliminado correctamente: ID {UsuarioId}";

                Console.WriteLine(message);
                Snackbar.Add(message, Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var errorMessage = response?.Message ?? "Error al eliminar el usuario";
                Console.WriteLine($"❌ {errorMessage}");
                Snackbar.Add(errorMessage, Severity.Error);
                loading = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error al eliminar usuario: {ex.Message}\n{ex.StackTrace}");
            Snackbar.Add($"Error al eliminar el usuario: {ex.Message}", Severity.Error);
            loading = false;
        }
    }

    private void Cancelar()
    {
        MudDialog.Close(DialogResult.Cancel());
    }
}
