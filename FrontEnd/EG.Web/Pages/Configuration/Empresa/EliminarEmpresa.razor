@using EG.Web.Contracs.Configuration
@using EG.Web.Models.Configuration
@using EG.Web.Services
@using MudBlazor

@inject IEmpresaService empresaService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        @if (loading)
        {
            <MudProgressCircular Indeterminate="true" />
        }
        else
        {
            <MudText>¿Está seguro de que desea eliminar esta empresa?</MudText>
            <MudText Color="Color.Warning" Class="mt-4"><strong>@empresa?.EmpresaNombre</strong></MudText>
            <MudAlert Severity="Severity.Warning" Class="mt-4">
                Esta acción no se puede deshacer.
            </MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Eliminar" Disabled="@loading">
            Eliminar
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public int EmpresaId { get; set; }
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    private EmpresaResponse? empresa;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await empresaService.GetEmpresaByIdAsync(EmpresaId);

            if (response != null && response.Success && response.Data != null)
            {
                empresa = response.Data;
                Console.WriteLine($"✅ Empresa cargada: ID {empresa.PkidEmpresa}, " +
                                  $"Nombre: {empresa.EmpresaNombre}, " +
                                  $"Estado ID: {empresa.PkidEstado}, " +
                                  $"Estatus: {(empresa.EmpresaActivo == true ? "Activa" : "Inactiva")}");
            }
            else
            {
                var errorMessage = response?.Message ?? "Error al cargar la empresa";
                Console.WriteLine($"⚠️ {errorMessage}");
                Snackbar.Add(errorMessage, Severity.Error);
                MudDialog.Close(DialogResult.Ok(false));
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error al inicializar: {ex.Message}\n{ex.StackTrace}");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task Eliminar()
    {
        try
        {
            loading = true;
            var response = await empresaService.DeleteEmpresaAsync(EmpresaId);

            if (response != null && response.Success)
            {
                var message = !string.IsNullOrEmpty(response.Message)
                    ? response.Message
                    : $"✅ Empresa eliminada correctamente: ID {EmpresaId}";

                Console.WriteLine(message);
                Snackbar.Add(message, Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                var errorMessage = response?.Message ?? "Error al eliminar la empresa";
                Console.WriteLine($"❌ {errorMessage}");
                Snackbar.Add(errorMessage, Severity.Error);
                loading = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Error al eliminar empresa: {ex.Message}\n{ex.StackTrace}");
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            loading = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}